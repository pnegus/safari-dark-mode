{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "Safari Dark Mode",
    "description": "Simple always on dark mode filter",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },
    
    "permissions": [],
    "host_permissions": [
            "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["preload.css"],
            "js": ["preload.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["<all_urls>"],
            "css": ["postload.css"],
            "js": ["postload.js"],
            "run_at": "document_end"
        }
    ]
}
